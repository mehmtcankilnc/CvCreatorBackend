{
  "AllowedHosts": "*",
  "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": {
          "Default": "Information",
        "Override": {
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "System": "Warning"
        }
      },
      "WriteTo": [
          { "Name": "Console" },
          {
              "Name": "File",
              "Args": {
                  "path": "Logs/log-.txt",
                  "rollingInterval": "Day",
                  "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
              }
          }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
